# Apache 2.2
<IfModule !mod_authz_core.c>
   <Files *.php>
   order allow,deny
   deny from all
   </Files>
   <FilesMatch "\.(log|sh|tpl|txt)$">
     order allow,deny
     deny from all
   </FilesMatch>
</IfModule>

# Apache 2.4
<IfModule mod_authz_core.c>
   <Files *.php>
   Require all denied
   </Files>
   <FilesMatch "\.(log|sh|tpl|txt)$">
     Require all denied
   </FilesMatch>
</IfModule>
